<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_lista_medicos">
            <field name="name">Listado de medicos del hospital - ARG</field>
            <field name="res_model">gestion_hospital.medico</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_medico" model="ir.ui.view">
            <field name="name">Medicos</field>
            <field name="model">gestion_hospital.medico</field>
            <field name="arch" type="xml">
              <tree>
                <field name="nombre_apellidos" />
                <field name="num_colegiado" />
              </tree>
            </field>
          </record>
    </data>
</odoo>