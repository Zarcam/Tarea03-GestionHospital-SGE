<odoo>
  <data>
    <record model="ir.actions.act_window" id="action_lista_pacientes">
      <field name="name">Listado de pacientes del hospital - ARG</field>
      <field name="res_model">gestion_hospital.paciente</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Gestor Hospital" id="pacientes_menu_root"/>
    <menuitem name="Opciones Gestion Hospital" id="gestion_hospital_menu_1" parent="pacientes_menu_root"/>
    <menuitem name="Ver pacientes" id="gestion_hospital_menu_1_list" parent="gestion_hospital_menu_1" action="action_lista_pacientes"/>

    <record id="view_paciente" model="ir.ui.view">
      <field name="name">Pacientes</field>
      <field name="model">gestion_hospital.paciente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre_apellido" />
          <field name="sintomas" />
        </tree>
      </field>
    </record>
  </data>
</odoo>